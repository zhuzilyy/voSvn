<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_temp"
        android:layout_below="@+id/title" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/circle_white_stroke"
        android:layout_marginBottom="@dimen/x7"/>
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/x3"
        android:orientation="horizontal">
        <!--vo-->
        <RelativeLayout
            android:id="@+id/btn_container_conversation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:stateListAnimator="@null"
                android:id="@+id/btn_conversation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableTop="@drawable/fx_tab_chat_bg"
                android:onClick="onTabClicked"
                android:text="VO"

                android:scaleType="matrix"
                android:textColor="@color/em_main_botton_text_color"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/em_unread_count_bg"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />
        </RelativeLayout>
        <!--好友-->
        <RelativeLayout
            android:id="@+id/btn_container_address_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:stateListAnimator="@null"
                android:id="@+id/btn_address_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableTop="@drawable/fx_tab_contact_list_bg"
                android:onClick="onTabClicked"

                android:scaleType="matrix"
                android:text="@string/AddressBook"
                android:textColor="@color/em_main_botton_text_color"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/unread_address_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/em_unread_dot"
                android:visibility="visible" />

        </RelativeLayout>
        <!--加号站位-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            >
        </RelativeLayout>
        <!--发现-->
        <RelativeLayout
            android:id="@+id/btn_container_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:stateListAnimator="@null"
                android:id="@+id/btn_find"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableTop="@drawable/fx_tab_find_bg"
                android:onClick="onTabClicked"
                android:scaleType="matrix"
                android:text="@string/find"
                android:textColor="@color/em_main_botton_text_color"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_newVersion"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/em_unread_dot"
                android:visibility="invisible" />

        </RelativeLayout>
        <!--我的-->
        <RelativeLayout
            android:id="@+id/btn_container_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableTop="@drawable/fx_tab_profile_bg"
                android:onClick="onTabClicked"
                android:text="@string/mine"
                android:textColor="@color/em_main_botton_text_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/noclick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone"
        />
    <View
        android:id="@+id/view_temp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@id/main_bottom"
        android:background="@color/gray"
         />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/hideMean_re"
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="match_parent"/>
    <!--菜单背景-->
    <RelativeLayout
        android:id="@+id/menu_bg_re"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_menu_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x27"
        />
    <!--人生笔记弹出-->
    <ImageView
        android:id="@+id/lifeNote_img_menu"
        android:layout_width="@dimen/x12"
        android:layout_height="@dimen/x12"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_marginBottom="@dimen/x30"
        android:gravity="center"
        android:src="@mipmap/main_lifenote_function"
        />
    <!--隐藏好友弹出-->
    <ImageView

        android:id="@+id/hideFriend_img_menu"
        android:layout_width="@dimen/x12"
        android:layout_height="@dimen/x12"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x30"
        android:gravity="center"
        android:src="@mipmap/main_hidefriend_function"
        />
    <!--显示好友弹出-->
    <ImageView
        android:id="@+id/showFriend_img_menu"
        android:layout_width="@dimen/x12"
        android:layout_height="@dimen/x12"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x30"
        android:gravity="center"
        android:src="@mipmap/main_showfriend_function"
        />
    <!--nei环-->
    <RelativeLayout
        android:id="@+id/show_incircle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="@dimen/x7"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@drawable/circle_white"
        android:layout_marginBottom="@dimen/x7"
        >
        <RelativeLayout
            android:id="@+id/re_plus"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/circle"
            android:layout_centerInParent="true"
            >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/plus"
                    android:layout_centerInParent="true"
                    />
            <!--出现菜单时的x号-->
            <RelativeLayout
                android:id="@+id/close_menu"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:background="@drawable/circle_white_stoke5"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/close_main"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>