<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    >
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <View
            android:id="@+id/view_temp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_back"
            android:background="#14191A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="聊天"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="添加朋友"
            android:layout_marginRight="@dimen/x12"
            android:textColor="#ffffff"
             />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_"
            android:layout_marginLeft="10dp"
             />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray4"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--使用听筒播放语音-->
        <RelativeLayout
            android:id="@+id/re_void"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_temp_fxid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="使用听筒播放语音"
                android:textColor="#353535"
                android:textSize="16sp" />

            <com.hyphenate.easeui.widget.EaseSwitchButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_Usehandset"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#dadada" />

        </RelativeLayout>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/setChatBackground_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="设置聊天背景"
                android:textColor="#353535"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#dadada" />


        </RelativeLayout>
        <!--清空聊天记录-->
        <RelativeLayout
            android:id="@+id/clearAllmsg_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="清空聊天记录"
                android:textColor="#353535"
                android:textSize="16sp" />



        </RelativeLayout>

    </LinearLayout>

    <!--清除所有聊天记录-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/clearMsg_re"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x35"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清空所有聊天记录"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:id="@+id/textView5" />

            <TextView

                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:hint="确认清空所有聊天记录"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:textSize="@dimen/x12"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                >

                <Button
                    android:id="@+id/_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="取消"
                    />
                <Button
                    android:id="@+id/_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="确定"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>