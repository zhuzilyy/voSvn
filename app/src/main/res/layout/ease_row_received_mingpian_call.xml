<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp" >

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity" >

        <com.hyphenate.easeui.widget.EaseImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"

            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:padding="@dimen/x5"
            android:layout_toRightOf="@id/iv_userhead"
            android:background="@drawable/ease_chatfrom_bg" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/x5"
                    android:layout_height="60dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_centerVertical="true"
                        android:id="@+id/card_head"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_launcher"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x5"
                        android:id="@+id/tv_nick"
                        android:layout_alignTop="@+id/card_head"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/card_head"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:maxWidth="@dimen/x100"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="中南海"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_account"
                        android:paddingTop="@dimen/x15"
                        android:layout_marginTop="15dp"
                        android:singleLine="true"
                        android:maxWidth="@dimen/x100"
                        android:ellipsize="end"
                        android:layout_below="@+id/tv_chatcontent"
                        android:layout_toRightOf="@+id/card_head"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/gray"
                        android:paddingRight="@dimen/x8"
                        android:enabled="true"
                        android:layout_height="wrap_content"

                        android:text="中南海2"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@color/gray_normal"></View>
                <TextView
                    android:layout_marginTop="@dimen/x3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人名片"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="@dimen/x10"
                    android:paddingBottom="@dimen/x3"
                    />


            </LinearLayout>


            <!--
                        <TextView
                            android:id="@+id/tv_chatcontent"
                            style="@style/chat_content_date_style"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black_deep"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_call_icon"
                            android:background="@null"
                            android:minHeight="40dp"
                            android:padding="6dp"
                            />-->
        </RelativeLayout>

       <!-- <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_nick_margin_left"
            android:textSize="@dimen/chat_nick_text_size"

            android:layout_toRightOf="@id/iv_userhead"
            android:visibility="visible" />-->

        <ImageView
            android:id="@+id/msg_status"
            android:layout_toRightOf="@+id/bubble"
            android:layout_width="@dimen/x25"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/x25"
            android:src="@mipmap/bg_"
            />
    </RelativeLayout>

</LinearLayout>