<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner"
    android:id="@+id/rl_lifeNote"
    >
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--title-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="人生笔记设置"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    />
                <RelativeLayout
                    android:id="@+id/re_cancel"
                    android:layout_width="35dp"
                    android:text="close"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_corner3"
                    >

                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:src="@mipmap/close3"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imageView2" />

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layerType="software"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/lifenote_setPWD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lifenote_setpwd"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/x8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="设置密码"
                        android:textSize="14sp"
                        android:textColor="@color/blue02version"
                       />
                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/gray"
                        android:layout_marginTop="@dimen/x15"
                        android:layout_marginRight="@dimen/x15"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/lifenote_fixPWD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lifenote_changepwd_"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/x8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="修改密码"
                        android:textSize="14sp"
                        android:textColor="@color/blue02version"
                        android:id="@+id/textView11" />
                    <View
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/gray"
                        android:layout_marginTop="@dimen/x15"
                        android:layout_marginRight="@dimen/x15"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/lifenote_cancelPWD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lifenote_canclepwd"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="取消密码"
                        android:textColor="@color/blue02version"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/x8"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/lifenote_findPWD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lifenote_findpwd"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/x8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="找回密码"
                        android:textSize="14sp"
                        android:textColor="@color/blue02version"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>