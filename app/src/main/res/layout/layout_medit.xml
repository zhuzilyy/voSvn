<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/medit_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"

    >

    <EditText
        android:id="@+id/medit_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/medit_end"

        android:background="@null"
        android:textColorHint="@color/white"
        android:layout_marginLeft="@dimen/x1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x5"
        android:hint="hint"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/x20" />

    <!--<ImageView-->
        <!--android:id="@id/medit_lable"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignBottom="@id/medit_input"-->
        <!--android:layout_alignTop="@id/medit_input"-->
        <!--android:paddingBottom="@dimen/x12"-->
        <!--android:paddingTop="@dimen/x12" />-->

    <LinearLayout
        android:id="@+id/medit_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/medit_input"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/medit_input"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/medit_eye"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="5dp"
            android:padding="@dimen/x3"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pwd_visable"
            android:visibility="gone"

            />

        <ImageView
            android:id="@+id/medit_del"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/x3"
            android:src="@drawable/icon_del"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>