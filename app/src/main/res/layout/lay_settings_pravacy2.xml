<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/x100"
        >
        <Button
            android:id="@+id/privacy2_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@drawable/privacy_bg"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:text="设置加密好友"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
        <Button
            android:layout_marginTop="@dimen/x15"
            android:id="@+id/privacy2_fix"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@drawable/privacy_bg"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:text="修改加密好友"
            android:textColor="@color/white"
            android:textSize="16sp"
            />




    </LinearLayout>

    <com.zl.vo_.main.views.XTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isshow_right_iv="gone"
        app:isshow_right_tv="gone"
        app:tv_left="隐私功能设置"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>