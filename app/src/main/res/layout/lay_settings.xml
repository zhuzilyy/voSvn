<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/x15"
        android:orientation="vertical">
        <!--消息提醒-->
        <RelativeLayout
            android:id="@+id/re_newmsgNotify"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/fx_icon_save"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"

                android:text="@string/new_msg_notigy"
                android:textColor="#353535"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="#dadada" />
        </RelativeLayout>
        <!--勿扰模式-->
        <RelativeLayout
            android:id="@+id/re_do_not_disturb_mode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/fx_icon_save"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/do_not_disturb_mode"
                android:textColor="#353535"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="#dadada" />
        </RelativeLayout>
        <!--聊天-->
        <RelativeLayout
            android:id="@+id/re_chat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/fx_icon_save"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/chat"
                android:textColor="#353535"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="#dadada" />
        </RelativeLayout>

        <!--通用-->
        <RelativeLayout
            android:id="@+id/re_currency"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/fx_icon_save"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/currency"
                android:textColor="#353535"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="#dadada" />
        </RelativeLayout>
        <!--隐私-->
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/x15"
            android:id="@+id/re_Privacy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/yinsi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x15"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/privacy"
                android:textColor="#353535"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="#dadada" />
        </RelativeLayout>
        <!--退出-->
        <RelativeLayout
            android:id="@+id/quite"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/fx_btn_list_item_bg"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_shoucang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/fx_icon_save"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_quite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/quite"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

<!--退出VO-->
    <RelativeLayout
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/re_quite"
        android:background="#aa000000"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:background="@drawable/shape_white_corner"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x55"
            android:layout_height="@dimen/x160">
            <!--退出登录-->
            <LinearLayout
                android:id="@+id/quite_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x15"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"

                    android:src="@mipmap/quite_people"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="退出当前账号"
                    android:layout_marginLeft="@dimen/x15"

                    android:textColor="@color/black_deep"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/light_gray4"
               />
            <!--退出vo-->
            <LinearLayout
                android:id="@+id/quite_vo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:src="@mipmap/quite_whole"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="关闭VO"

                    android:textColor="@color/black_deep"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    />

            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/white"
       >
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_" />
        <View
            android:id="@+id/view_temp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/iv_back"
            android:background="#14191A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/settings"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/x12"
            android:text="添加朋友"
            android:textColor="#ffffff"
            android:textSize="@dimen/x12"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>