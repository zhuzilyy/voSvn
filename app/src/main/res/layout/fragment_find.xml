<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:clickable="true"
    android:id="@+id/ll_find"
    android:orientation="vertical">
    <!--搜索,添加，标题-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="帮助"
            android:textColor="@color/black"
            android:textSize="18sp"
             />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_add"
            android:layout_width="20dp"
            android:layout_marginRight="15dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@mipmap/more_" />

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/iv_add"
            android:clickable="true"
            android:src="@mipmap/fdj_" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line" />

    <!--扫一扫-->
    <RelativeLayout
        android:id="@+id/re_qrcode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fx_btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/iv_friends"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/help_sao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_friends"
            android:text="扫一扫"
            android:textColor="#353535"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray4" />



    <!--分享给好友-->
    <RelativeLayout
        android:id="@+id/re_share"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fx_btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/iv_share"
            android:text="分享给好友"
            android:textColor="#353535"
            android:textSize="14sp" />
    </RelativeLayout>



    <!--帮助与反馈-->
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:id="@+id/re_helpfeedback"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fx_btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_yaoyiyao"
            android:text="帮助与反馈"
            android:textColor="#353535"
            android:textSize="14sp"
            android:id="@+id/textView7" />

        <ImageView
            android:id="@+id/iv_yaoyiyao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/help_help"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line" />
    <!--关于vo-->
    <RelativeLayout
        android:id="@+id/re_aboutVO"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fx_btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/iv_aboutvo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/help_about" />

        <TextView
            android:id="@+id/aboutTvVo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_aboutvo"
            android:text="关于VO"
            android:textColor="#353535"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_update_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/x6"
            android:layout_toRightOf="@+id/aboutTvVo"
            android:background="@drawable/blue_bg"
            android:paddingBottom="@dimen/x2"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x2"
            android:text="更新"
            android:textColor="@color/white"
            android:textSize="@dimen/recall_size_10" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:background="#dadada" />-->
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line"
        />
    <!--游戏 gone-->
    <RelativeLayout
        android:id="@+id/re_game"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fx_btn_list_item_bg"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_game"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/find_youxi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_game"
            android:text="游戏"
            android:textColor="#353535"
            android:textSize="16sp" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:background="#dadada" />-->
    </RelativeLayout>




</LinearLayout>