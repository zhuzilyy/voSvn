<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:orientation="horizontal"
        >
        <!--头像-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            >
            <com.zl.vo_.widget.RoundImageView
                android:id="@+id/addressHead"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x45"
                android:src="@mipmap/girl2"
                app:type="round"
                />

        </LinearLayout>
        <!--好友名称，理由-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/addressName"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/x8"
                android:textColor="@color/black_deep"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/addressPhone"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我是张三，加我"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/x8"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/gray"
                />
            
            
        </RelativeLayout>
        <!--添加或接受按钮-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/addressBtn"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x25"
                android:text="接受"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/selector_accept"
                />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>