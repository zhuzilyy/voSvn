<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <!--topTitle-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/x12">

        <ImageView
            android:id="@+id/iv_back"

            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back_" />

        <View
            android:id="@+id/view_temp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_back"
            android:background="#14191A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="设置加密好友"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:id="@+id/textView9" />

        <TextView
            android:id="@+id/writeLifeNote_tv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write"
            android:layout_marginRight="15dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@+id/title"
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:clickable="true"
        android:visibility="gone"
        >
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="@dimen/custom_avloading_height"
            android:layout_height="@dimen/custom_avloading_height"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicator="BallScaleMultiple"
            app:indicator_color="@color/common_top_bar_blue"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <com.zl.vo_.main.views.MEditText
                android:id="@+id/Met_privacy3_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                app:me_del_enable="true"
                app:me_eye_enable="true"
                app:me_hint="请输入密码"
                app:me_hintColor="@color/black_deep"
                app:me_inputType="password"
                app:me_textSize="6sp"
                app:me_textColor="@color/black_deep"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:me_background="#00ffffff"
                app:me_padding_left="15dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray4"
                android:layout_margin="10dp"
                android:layout_marginRight="@dimen/x10"
                />

            <com.zl.vo_.main.views.MEditText
                android:layout_marginTop="20dp"
                android:id="@+id/Met_privacy3_againmpwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                app:me_del_enable="true"
                app:me_eye_enable="true"
                app:me_hint="请再次输入密码"
                app:me_hintColor="@color/black_deep"
                app:me_inputType="password"
                app:me_textSize="6sp"
                app:me_textColor="@color/black_deep"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:me_background="#00ffffff"
                app:me_padding_left="15dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray4"
                android:layout_margin="10dp"
                android:layout_marginRight="@dimen/x10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:text="注：可以为不同好友设置不同隐藏密码"
                android:textSize="12sp"
                android:textColor="@color/blue02version"
                android:gravity="center"


                />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45">
                <TextView
                    android:id="@+id/tv_privacy3_submit"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_corner_blue"
                    android:text="确定"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingRight="@dimen/x20"
                    />
            </RelativeLayout>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>