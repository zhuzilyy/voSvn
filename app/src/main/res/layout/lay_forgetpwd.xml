<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--title-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/x45">
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@mipmap/back_"
                    android:layout_marginLeft="@dimen/x12"
                    />
                <TextView
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/x12"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="返回"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="重置密码"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/x16"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/light_gray"
        ></View>

    <!--账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            >

            <com.zl.vo_.main.views.ClearEditText
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:maxLength="11"
                android:id="@+id/forgetpwd_phone"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"

                android:background="@null"
                android:hint="请输入手机号"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                />

          <!--  <com.zl.vo_.main.views.MEditText
                android:id="@+id/forgetpwd_phone"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="@dimen/x45"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                app:me_del_enable="true"
                app:me_eye_enable="false"
                app:me_hint="手机号"
                app:me_hintColor="@color/black"
                app:me_textColor="@color/black"
                app:me_textSize="@dimen/x5"/>-->
            <TextView
                android:id="@+id/forgetpwd_getcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:layout_weight="1"
                android:textSize="@dimen/x14"
                android:gravity="center"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/light_gray"></View>
    </LinearLayout>
        <!--账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="vertical">

            <com.zl.vo_.main.views.ClearEditText
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:maxLength="11"
                android:id="@+id/forgetpwd_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                />

          <!--  <com.zl.vo_.main.views.MEditText
                android:id="@+id/forgetpwd_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                app:me_del_enable="true"
                app:me_eye_enable="false"
                app:me_hint="验证码"
                app:me_hintColor="@color/black"
                app:me_textColor="@color/black"
                app:me_textSize="@dimen/x5"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/light_gray"></View>
        </LinearLayout>

    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.zl.vo_.main.views.ClearEditText
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:maxLength="11"
                android:id="@+id/forgetpwd_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                />

           <!-- <com.zl.vo_.main.views.MEditText
                android:id="@+id/forgetpwd_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/x45"
                android:layout_weight="3"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                app:me_del_enable="true"
                app:me_eye_enable="true"
                app:me_hint="密码"
                app:me_hintColor="@color/black"

                app:me_inputType="password"
                app:me_textColor="@color/black"
                app:me_textSize="@dimen/x5"

                />
-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/light_gray"></View>
    </LinearLayout>

        <Button
            android:id="@+id/forgetpwd_submit"
            android:layout_marginTop="@dimen/x25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:text="确定"
            android:textSize="@dimen/x16"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_selector2"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            />
    </LinearLayout>

    <!--loading-->
    <RelativeLayout
        android:layout_below="@+id/title"
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:clickable="true"
        android:visibility="gone"

        >
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="@dimen/custom_avloading_height"
            android:layout_height="@dimen/custom_avloading_height"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicator="BallScaleMultiple"
            app:indicator_color="@color/common_bottom_bar_normal_bg"

            />

    </RelativeLayout>




</RelativeLayout>