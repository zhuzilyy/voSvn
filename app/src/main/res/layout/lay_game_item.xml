<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x12"
        android:layout_height="@dimen/x65">
        <TextView
            android:id="@+id/game_sign"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1."
            android:textSize="@dimen/x25"
            android:textStyle="bold|italic"
            />
        <ImageView
            android:layout_marginLeft="@dimen/x8"
            android:layout_toRightOf="@+id/game_sign"
            android:id="@+id/game_img"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:scaleType="centerCrop"
            android:src="@mipmap/girl2"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/game_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/game_download"
            >
            <TextView
                android:id="@+id/game_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王者荣耀"
                android:textSize="@dimen/x14"
                android:textColor="@color/black"
                android:gravity="center_vertical"

                />
            <TextView
                android:id="@+id/game_discription"
                android:layout_marginTop="@dimen/x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="王者荣fefsfsfsfsfsfsdfsfsfdsdf耀"
                android:ellipsize="end"
                android:textSize="@dimen/x12"
                android:textColor="@color/black"
                android:gravity="center_vertical"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/game_download"
            android:layout_width="@dimen/x55"
            android:layout_height="wrap_content"
            android:text="下载"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/game_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/x5"
            android:paddingTop="@dimen/x5"


            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/light_gray"></View>

</LinearLayout>