<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/back_" />

            <View
                android:id="@+id/view_temp"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/iv_back"
                android:background="#14191A" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="更改备注"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_corner_blue"
                android:gravity="center"
                android:text="保存"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray4"
            />
        <!--输入框-->
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/et_info"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#353535"
           android:background="@null"
            android:hint="备注"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blue02version"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_note"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="好名字可以让你的好朋友更容易记得你"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:id="@+id/flag"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray5"
        />
    <LinearLayout
        android:background="@color/white"
        android:layout_below="@+id/flag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_save"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/flag"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/shape_corner_blue"
            />
        <ImageView
            android:id="@+id/iv_flag"
            android:layout_below="@+id/flag"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="@dimen/x25"
            android:src="@mipmap/sign_bg"
            />
        <LinearLayout
            android:layout_below="@+id/iv_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/light_gray5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更改备注昵称"
                android:gravity="center"
                android:textColor="@color/blue02version"
                android:textSize="18sp"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系更方便，更快找到好友"
                android:gravity="center"
                android:textColor="@color/blue02version"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>



    <!--loading-->
    <RelativeLayout

        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:clickable="true"
        android:visibility="gone"
        >
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="@dimen/custom_avloading_height"
            android:layout_height="@dimen/custom_avloading_height"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicator="BallScaleMultiple"
            app:indicator_color="@color/common_top_bar_blue"

            />

    </RelativeLayout>

</RelativeLayout>