<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/x25"
    android:background="@color/white"
    >

    <!--申请与通知-->
    <RelativeLayout
        android:id="@+id/ll_applyNotify"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/iv_applyNotify"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ease_default_avatar"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_applyNotify"
            android:text="申请与通知"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/newmsg_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x12"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:visibility="gone"
            android:background="@drawable/red_shape"
            ></RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/x1"></View>
    <!--新的朋友-->
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_newFriend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ease_default_avatar"
            />
        <TextView
            android:text="新的朋友"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/x1"></View>
    <!--群聊-->
    <LinearLayout
        android:id="@+id/ll_chatGroup"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ease_default_avatar"
            />
        <TextView
            android:text="群聊"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/x1"></View>
    <!--创建分组-->
    <LinearLayout
        android:id="@+id/ll_createGroup"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ease_default_avatar"
            />
        <TextView
            android:text="创建分组"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/x1"></View>
    <!--vo助手-->
    <LinearLayout
        android:id="@+id/ll_voHelper"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ease_default_avatar"
            />
        <TextView
            android:text="VO助手"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/x1"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ebebeb"
        android:layout_height="@dimen/x20"></RelativeLayout>

</LinearLayout>