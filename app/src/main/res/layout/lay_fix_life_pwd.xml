<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <!--输入原密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp">
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="输入原密码"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />
        <com.zl.vo_.main.views.ClearEditText
            android:singleLine="true"
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/x45"
            android:layout_weight="3"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:textSize="14sp"
            android:hint="输入原密码"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@null"
            android:inputType="textPassword"
            />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/common_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    <!--输入新密码-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp">
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="输入新密码"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />
        <com.zl.vo_.main.views.ClearEditText
            android:singleLine="true"
            android:id="@+id/et_pwdnew"
            android:layout_width="0dp"
            android:layout_height="@dimen/x45"
            android:layout_weight="3"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:hint="输入新密码"
            android:background="@null"
            />


    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/common_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    <!--确认新密码-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp">
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="确认新密码"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />
        <com.zl.vo_.main.views.ClearEditText
            android:singleLine="true"
            android:id="@+id/et_pwd_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/x45"
            android:layout_weight="3"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="确认新密码"
            android:background="@null"
            />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/common_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    <Button
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_corner_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/button2" />


    </LinearLayout>


    <!--loading-->
    <RelativeLayout
        android:layout_below="@+id/ll_title"
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:clickable="true"
        android:visibility="gone"

        >
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="@dimen/custom_avloading_height"
            android:layout_height="@dimen/custom_avloading_height"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicator="BallScaleMultiple"
            app:indicator_color="@color/common_bottom_bar_normal_bg"

            />

    </RelativeLayout>

</RelativeLayout>