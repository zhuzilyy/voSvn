<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner"
    >
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--title-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="视频"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    />
                <RelativeLayout
                    android:id="@+id/re_cancel"
                    android:layout_width="35dp"
                    android:text="close"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_corner3"
                    >
                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:src="@mipmap/close3"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/cancel_iv"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layerType="software"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/tipcolor"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:text="是否发送此视频"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/video_send"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="发送"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_corner_blue"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/video_preview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="预览"

                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_corner_blue"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_height="match_parent" />



            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="确认清除加密好友,清除后将解除好友关系！"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:gravity="center_vertical"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_confrim"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="确定"
                android:background="@drawable/shape_blue_bgr"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:textSize="14sp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>